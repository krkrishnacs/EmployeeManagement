
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}
<style>
    .btn-primary {
        background-color: #1ab394;
        border-color: #1ab394;
        color: #FFFFFF;
        margin-left: 600px;
    }

    .row {
        margin-right: 0px;
        margin-left: 0px;
    }

    .modal-footer {
        margin-top: 13px;
    }

    .panel-body {
        padding: -15px;
    }

    .hide-calendar .ui-datepicker-calendar {
        display: none;
    }
