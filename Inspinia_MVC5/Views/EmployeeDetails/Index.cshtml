
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}
<div class="wrapper wrapper-content app-page-start">
    <div class="row">
        <div class="col-md-12 box-filter">
            <input type="hidden" name="DegreeCourseID" value="" id="hdnDegreeCourseID" />
            <div class="panel panel-primary no-radius">
                <div class="panel-heading no-radius">
                    Degree Course
                </div>
                <div class="panel-body ">
                    <div class="row">
                        <div class="col-md-3">
                            <label class="required">Employee Name:</label>
                            <input type="text" class="form-control input-sm t-name" name="empName" id="empName" placeholder="Enter Employee Name" required />
                        </div>
                        <div class="col-md-3">
                            <label class="required">Employee Date Of Birth:</label>
                            <input type="text" class="form-control input-sm t-name" name="empdate" id="empdate" placeholder="Enter Employee Date Of Birth" required />
                        </div>
                        <div class="col-md-3">
                            <label class="required">Department Name:</label>
                            <select class="form-control select2_demo_2 ddldepartment" id="ddldepartment" name="ddldepartment">
                                <option value="0">Select</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="required">Designation Name:</label>
                            <select class="form-control select2_demo_2 ddldesignation" id="ddldesignation" name="ddldesignation">
                                <option value="0">Select</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="required">Gender Name:</label>
                            <select class="form-control select2_demo_2" id="ddlgender" name="ddlgender">
                                <option value="0">Select</option>
                                <option value="M">Male</option>
                                <option value="F">Female</option>
                                <option value="T">TransGender</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="required">Mobile Number:</label>
                            <input type="text" class="form-control input-sm t-name" name="mobileno" id="mobileno" placeholder="Enter Mobile Number" required />
                        </div>
                        <div class="col-md-3">
                            <label class="required">Employee Address:</label>
                            <input type="text" class="form-control input-sm t-name" name="empaddress" id="empaddress" placeholder="Enter Address" required />
                        </div>
                        <div class="col-md-1">
                            <label class="">Is Active :</label>
                            <input type="checkbox" class="form-control input-sm isactive" id="isactive" name="isactive" title="isactive " required />
                        </div>
                        <div class="col-md-4" style="padding-top:25px; text-align:right" align-item="center">
                            <button type="button" style="height: 31px;width: 79px;" id="btnSave" class="btn btn-primary">Save</button>
                            <button type="button" style="height: 31px;width: 79px;" id="btnRefresh" class="btn btn-danger">Refresh</button>
                        </div>
                    </div>

                    @*End Palne body*@
                </div>

            </div>
        </div>
    </div>
    <div class="panel panel-primary no-radius">
        <div class="panel-heading no-radius">
            Degree Couse List:-
        </div>
        <div class="panel-body">
            <div class="row">
                <div id="collapseOne" class="panel-collapse collapse in">
                    <div class="panel-body">
                        <div class="table-resposive mt-15">
                            <table class="table table-bordered table-condensed table-hover table-tbldata   tbldata" style="overflow-x: scroll; display:normal; width: 100%;" cellspacing="0" id="tblDegreeCourse"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

